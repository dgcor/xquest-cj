{
  "action": {
    "name": "resource.add",
    "id": "scores",
    "ignorePrevious": true
  },
  "inputEvent": {
    "gameInputEvent": ["enter", "help", "space"],
    "action": "#back.click"
  },
  "button": {
    "id": "back",
    "texture": "empty",
    "textureRect": [320, 240],
    "anchor": "all",
    "onClick": { "name": "resource.pop" }
  },
  "text": [
    {
      "id": "scoreTitle",
      "font": "fontWhite",
      "position": [160, 81],
      "anchor": "none",
      "horizontalAlign": "center",
      "text": "HALL OF FAME (AVERAGE)"
    },
    {
      "id": "scoreNames",
      "font": "font",
      "position": [20, 100],
      "anchor": "none",
      "verticalSpaceOffset": 2
    },
    {
      "id": "scorePoints",
      "font": "font",
      "position": [270, 100],
      "anchor": "none",
      "horizontalAlign": "right",
      "verticalSpaceOffset": 2
    },
    {
      "id": "scoreLevel",
      "font": "font",
      "position": [300, 100],
      "anchor": "none",
      "horizontalAlign": "right",
      "verticalSpaceOffset": 2
    }
  ],
  "replaceVars": false,
  "action.update": [
    {
      "name": "if.equal",
      "param1": "%currentLevel.hasHighScore.0%",
      "param2": true,
      "then": [
        {
          "name": "text.appendText",
          "id": "scoreNames",
          "query": "currentLevel",
          "text": "%highScore.0.name%\n"
        },
        {
          "name": "text.appendText",
          "id": "scorePoints",
          "query": "currentLevel",
          "text": "%highScore.0.score%\n"
        },
        {
          "name": "text.appendText",
          "id": "scoreLevel",
          "query": "currentLevel",
          "text": "%highScore.0.level%\n"
        }
      ]
    },
